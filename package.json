{
	"name": "sentences-per-line",
	"version": "0.3.0",
	"description": "Contributed markdownlint rule for limiting sentences per line. ðŸ“",
	"keywords": [
		"line",
		"lint",
		"markdown",
		"markdownlint-rule",
		"markdownlint",
		"per",
		"sentences"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/JoshuaKGoldberg/sentences-per-line"
	},
	"license": "MIT",
	"author": {
		"name": "JoshuaKGoldberg",
		"email": "npm@joshuakgoldberg.com"
	},
	"type": "commonjs",
	"exports": {
		".": {
			"types": {
				"import": "./lib/index.d.mts",
				"require": "./lib/index.d.ts"
			},
			"import": "./lib/index.mjs",
			"require": "./lib/index.js"
		}
	},
	"main": "./lib/index.js",
	"files": [
		"lib/",
		"package.json",
		"LICENSE.md",
		"README.md"
	],
	"scripts": {
		"build": "tsup",
		"format": "prettier \"**/*\" --ignore-unknown",
		"lint": "eslint . --max-warnings 0",
		"lint:knip": "knip",
		"lint:md": "markdownlint \"**/*.md\" \".github/**/*.md\" --rules .",
		"lint:packages": "pnpm dedupe --check",
		"lint:spelling": "cspell \"**\" \".github/**/*\"",
		"prepare": "husky",
		"should-semantic-release": "should-semantic-release --verbose",
		"test": "vitest",
		"tsc": "tsc"
	},
	"lint-staged": {
		"*": "prettier --ignore-unknown --write"
	},
	"dependencies": {
		"markdownlint-rule-helpers": "^0.28.0"
	},
	"devDependencies": {
		"@eslint-community/eslint-plugin-eslint-comments": "^4.4.1",
		"@eslint/js": "^9.17.0",
		"@release-it/conventional-changelog": "^10.0.0",
		"@types/markdownlint-rule-helpers": "^0.21.5",
		"@vitest/coverage-v8": "^2.1.8",
		"@vitest/eslint-plugin": "^1.1.16",
		"console-fail-test": "^0.5.0",
		"cspell": "^8.16.1",
		"eslint": "^9.17.0",
		"eslint-plugin-jsdoc": "^50.6.1",
		"eslint-plugin-jsonc": "^2.18.2",
		"eslint-plugin-markdown": "^5.1.0",
		"eslint-plugin-n": "^17.15.0",
		"eslint-plugin-package-json": "^0.19.0",
		"eslint-plugin-perfectionist": "^4.3.0",
		"eslint-plugin-regexp": "^2.7.0",
		"eslint-plugin-yml": "^1.16.0",
		"husky": "^9.1.7",
		"knip": "5.42.1",
		"lint-staged": "^15.2.11",
		"markdownlint": "^0.37.0",
		"markdownlint-cli": "^0.43.0",
		"prettier": "^3.4.2",
		"prettier-plugin-curly": "^0.3.1",
		"prettier-plugin-packagejson": "^2.5.6",
		"release-it": "^18.0.0",
		"should-semantic-release": "^0.3.0",
		"tsup": "^8.3.5",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.0",
		"vitest": "^2.1.8"
	},
	"packageManager": "pnpm@9.15.4",
	"engines": {
		"node": ">=18"
	},
	"publishConfig": {
		"provenance": true
	}
}
